# Remove status bar
set -g status off

# Prefix
unbind C-b
set -g prefix C-f
bind C-f send-prefix

# Copy mode
unbind-key [
bind-key C-f copy-mode

# Copy selection
unbind-key -T copy-mode M-w
bind-key -T copy-mode C-c send-keys -X copy-selection

# No delay for escape key press
set -sg escape-time 0