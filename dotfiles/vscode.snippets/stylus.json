{
	// Place your snippets for stylus here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Block Comment or Docs": {
		"prefix": "blk",
		"body": [
			"///",
			"///  $1",
			"///"
		],
		"description": "Block Comment or Docs"
	},
	"Debug Outline": {
		"prefix": "out",
		"body": "outline: 1px dashed alpha(#000, .5); outline-offset: -1px;",
		"description": "Debug Outline"
	},
	"Debug Outline White": {
		"prefix": "outw",
		"body": "outline: 1px dashed alpha(#fff, .5); outline-offset: -1px;",
		"description": "Debug Outline (white)"
	},
	"Flex Center": {
		"prefix": "fc",
		"body": [
			"justify-content: center",
			"align-items: center"
		],
		"description": "Flex center styles."
	},
	"BG color": {
		"prefix": "bgc",
		"body": [
			"background-color: $0"
		],
		"description": "Background color."
	},
	"Box shadow": {
		"prefix": "bsh",
		"body": [
			"box-shadow: $0"
		],
		"description": "box shadow."
	}
}